{
  "openapi": "3.1.0",
  "info": {
    "title": "ZCom",
    "description": "An e-commerce-service backend Api",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://zcom-eht8.shuttle.app",
      "description": "deployed api hosted in shuttle"
    },
    {
      "url": "http://192.168.244.X:8000",
      "description": "If API is available in LAN"
    },
    {
      "url": "http://127.0.0.1:8000",
      "description": "If Api is available in localhost network"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "auth::public"
        ],
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login_RawPassword"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User Granted"
          },
          "500": {
            "description": "Causes: Failed Hash, Failed signing claim, Failed cookie session"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login_RawPassword": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "RawPassword": {
        "default": null
      }
    }
  },
  "tags": [
    {
      "name": "public",
      "description": "Public endpoints that is open the guests and users"
    },
    {
      "name": "user",
      "description": "Authenticated Endpoints for valid users"
    },
    {
      "name": "worker",
      "description": "Authenticated Endpoints for worker users"
    },
    {
      "name": "admin",
      "description": "Authenticated Endpoints for admin users"
    }
  ]
}